generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id           Int      @id @default(autoincrement())
  title        String
  category_id  Int
  publishedAt  String
  copied_owned Int
  uploadedAt   DateTime @default(now())
}

model Author {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model book_author {
  book_id   Int
  author_id Int

  @@id([book_id, author_id])
}

model Category {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Admin {
  id       Int     @id @default(autoincrement())
  username String
  password String
  role     Boolean
}

model Member {
  id         Int    @id @default(autoincrement())
  name       String
  class_name String
  phone      String
}

model loan {
  id            Int      @id @default(autoincrement())
  book_id       Int
  member_id     Int
  loan_date     DateTime
  returned_date DateTime
  returned      Boolean
}
